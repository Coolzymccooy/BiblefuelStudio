rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function owner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    // User profile + app data (scripts, jobs, queue, library metadata)
    match /users/{uid} {
      allow create, read, update: if owner(uid);
      allow delete: if false;

      match /{subCollection}/{docId} {
        allow read, write: if owner(uid);
      }
    }

    // Public render/share metadata.
    // Document shape example:
    // { ownerUid: "...", visibility: "public", title: "...", outputUrl: "..." }
    match /publicShares/{shareId} {
      allow read: if resource.data.visibility == "public";
      allow create: if signedIn() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if signedIn() && resource.data.ownerUid == request.auth.uid;
    }

    // Optional social publishing audit log.
    match /publishLogs/{logId} {
      allow create: if signedIn() && request.resource.data.ownerUid == request.auth.uid;
      allow read, update, delete: if signedIn() && resource.data.ownerUid == request.auth.uid;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
