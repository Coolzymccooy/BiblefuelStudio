PORT=5051
CORS_ORIGIN=http://localhost:5051

# Script generation (optional)
# OPENAI_API_KEY=
# GEMINI_API_KEY=

# Pexels (optional)
# PEXELS_API_KEY=

# ElevenLabs TTS (optional)
# ELEVENLABS_API_KEY=
# ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# FFmpeg (optional)
# Rendering Optimization
FFMPEG_PATH=ffmpeg
FFMPEG_HWACCEL=      # Set to 'nvenc' (Nvidia) or 'qsv' (Intel) for hardware acceleration
FFMPEG_PRESET=fast   # FFmpeg preset (ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow)
FFPROBE_PATH=

OUTPUT_DIR=./outputs

# Remote internet access
ADMIN_SETUP_KEY=
JWT_SECRET=
JWT_EXPIRES_IN=7d
CORS_ORIGIN=*
DATA_DIR=./data

# Firebase Admin (optional: required for Firebase auth verification and storage mirroring)
# Create a service account in Firebase Console > Project settings > Service accounts
# and copy values into these env vars.
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
# FIREBASE_MIRROR_OUTPUTS=false

# YouTube Direct Posting (optional: used as fallback when social.json is empty)
# YOUTUBE_CLIENT_ID=
# YOUTUBE_CLIENT_SECRET=
# YOUTUBE_REFRESH_TOKEN=

# Jobs reliability tuning (optional)
# JOB_EXEC_TIMEOUT_SEC=600
# STALE_RUNNING_JOB_MINUTES=45
